<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SouliTEK All-In-One Scripts" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18" 
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12" 
                                Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tool Card Style -->
        <Style x:Key="ToolCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#667eea" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="8,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#667eea"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container with rounded corners and shadow -->
    <Border CornerRadius="15" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>      <!-- Title bar -->
                <RowDefinition Height="70"/>      <!-- Logo (Compact) -->
                <RowDefinition Height="80"/>      <!-- Search & Filter (Compact) -->
                <RowDefinition Height="*"/>       <!-- Tools (Grid) -->
                <RowDefinition Height="30"/>      <!-- Status bar (Compact) -->
                <RowDefinition Height="50"/>      <!-- Buttons (Compact) -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#667eea" Name="TitleBarGrid">
                <TextBlock Text="SouliTEK All-In-One Scripts" 
                          FontSize="12" 
                          FontWeight="SemiBold"
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="15,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="MinimizeButton"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Text="&#xE921;"/>
                    </Button>
                    <Button Name="CloseButton"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Text="&#xE8BB;"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Compact Logo Section -->
            <Grid Grid.Row="1" Background="White">
                <Image Name="LogoImage" 
                       Height="50" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,10"/>
            </Grid>

            <!-- Compact Search & Filter Panel -->
            <Grid Grid.Row="2" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                
                <!-- Search Box -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,8" VerticalAlignment="Center">
                    <TextBlock Text="Search:" 
                              FontSize="10" 
                              FontWeight="Bold"
                              VerticalAlignment="Center" 
                              Margin="0,0,8,0"
                              Foreground="#64748B"/>
                    <TextBox Name="SearchBox" 
                            Style="{StaticResource SearchBox}"
                            Width="890"
                            Height="28"/>
                </StackPanel>
                
                <!-- Category Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,2" VerticalAlignment="Center">
                    <TextBlock Text="Categories:" 
                              FontSize="9" 
                              FontWeight="Bold"
                              VerticalAlignment="Center" 
                              Margin="0,0,6,0"
                              Foreground="#64748B"/>
                    <Button Name="BtnCatAll" Content="All" Style="{StaticResource CategoryButton}" Width="70" Height="24"/>
                    <Button Name="BtnCatSetup" Content="Setup" Style="{StaticResource CategoryButton}" Width="70" Height="24"/>
                    <Button Name="BtnCatNetwork" Content="Network" Style="{StaticResource CategoryButton}" Width="75" Height="24"/>
                    <Button Name="BtnCatInternet" Content="Internet" Style="{StaticResource CategoryButton}" Width="75" Height="24"/>
                    <Button Name="BtnCatSecurity" Content="Security" Style="{StaticResource CategoryButton}" Width="75" Height="24"/>
                    <Button Name="BtnCatSupport" Content="Support" Style="{StaticResource CategoryButton}" Width="75" Height="24"/>
                    <Button Name="BtnCatSoftware" Content="Software" Style="{StaticResource CategoryButton}" Width="75" Height="24"/>
                    <Button Name="BtnCatM365" Content="M365" Style="{StaticResource CategoryButton}" Width="60" Height="24"/>
                    <Button Name="BtnCatHardware" Content="Hardware" Style="{StaticResource CategoryButton}" Width="80" Height="24"/>
                </StackPanel>
            </Grid>

            <!-- Tools ScrollViewer with WrapPanel for Grid Layout -->
            <ScrollViewer Grid.Row="3" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="10,5"
                         Background="#F8FAFC">
                <WrapPanel Name="ToolsPanel" Orientation="Horizontal"/>
            </ScrollViewer>

            <!-- Compact Status Bar -->
            <Grid Grid.Row="4" Background="#F8FAFC">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name="StatusLabel" 
                          Grid.Column="0"
                          Text="Ready - Select a tool to launch" 
                          FontSize="9"
                          Foreground="#64748B" 
                          VerticalAlignment="Center" 
                          Margin="15,0"/>
                <TextBlock Name="VersionLabel" 
                          Grid.Column="1"
                          Text="Version 2.0.0" 
                          FontSize="9"
                          Foreground="#94A3B8" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Margin="15,0"/>
                <TextBlock Name="AdminLabel" 
                          Grid.Column="2"
                          Text="Administrator" 
                          FontSize="9"
                          FontWeight="Bold"
                          Foreground="#10B981" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Right"
                          Margin="0,0,15,0"/>
            </Grid>

            <!-- Compact Bottom Buttons -->
            <StackPanel Grid.Row="5" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Button Name="HelpButton" Content="Help" Width="90" Height="35" Style="{StaticResource ModernButton}" Margin="3" Background="#6366f1"/>
                <Button Name="AboutButton" Content="About" Width="90" Height="35" Style="{StaticResource ModernButton}" Margin="3" Background="#8b5cf6"/>
                <Button Name="GitHubButton" Content="GitHub" Width="90" Height="35" Style="{StaticResource ModernButton}" Margin="3" Background="#1e293b"/>
                <Button Name="WebsiteButton" Content="Website" Width="90" Height="35" Style="{StaticResource ModernButton}" Margin="3" Background="#14b8a6"/>
                <Button Name="ExitButton" Content="Exit" Width="90" Height="35" Style="{StaticResource ModernButton}" Margin="3" Background="#ef4444"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

