<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Soulitek AIO Scripts" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <!-- Primary Colors (Brand Core) -->
        <!-- Electric Purple / Indigo: #5B2EFF -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#5B2EFF"/>
        <!-- Vibrant Cyan / Aqua: #00E5FF -->
        <SolidColorBrush x:Key="AccentBrush" Color="#00E5FF"/>
        
        <!-- Secondary / Support Colors -->
        <!-- Dark Navy / Near-Black: #0B0F1A -->
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#0B0F1A"/>
        <!-- Soft Graphite Gray: #8A8F98 -->
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8A8F98"/>
        
        <!-- Legacy/Utility Colors -->
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
        <SolidColorBrush x:Key="Zinc800Brush" Color="#27272A"/>
        <SolidColorBrush x:Key="Zinc700Brush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="Zinc500Brush" Color="#8A8F98"/>
        <SolidColorBrush x:Key="Zinc400Brush" Color="#8A8F98"/>
        <SolidColorBrush x:Key="Zinc300Brush" Color="#D4D4D8"/>
        <SolidColorBrush x:Key="Zinc200Brush" Color="#E4E4E7"/>
        <SolidColorBrush x:Key="Zinc100Brush" Color="#F4F4F5"/>
        <SolidColorBrush x:Key="Zinc900Brush" Color="#0B0F1A"/>

        <!-- Category Button Style - Active (Pill) -->
        <Style x:Key="CategoryButtonActive" TargetType="Button">
            <Setter Property="Background" Value="#5B2EFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="9999" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Button Style - Inactive (Pill) -->
        <Style x:Key="CategoryButtonInactive" TargetType="Button">
            <Setter Property="Background" Value="#8A8F98"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="9999" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6A6F78"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tool Card Style -->
        <Style x:Key="ToolCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="0" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#5B2EFF" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F4F4F5"/>
            <Setter Property="BorderBrush" Value="#E4E4E7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="40,12,16,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="40,0,0,0"
                                            VerticalAlignment="Center"/>
                                <!-- Search Icon -->
                                <TextBlock Text="&#xE721;" 
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="16"
                                         VerticalAlignment="Center"
                                         Margin="12,0,0,0"
                                         Foreground="#8A8F98"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B2EFF"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Header -->
            <RowDefinition Height="*"/>        <!-- Main Content -->
            <RowDefinition Height="Auto"/>      <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Background="White" Name="TitleBarGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Logo -->
            <Button Grid.Column="0" 
                    Name="LogoButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Cursor="Hand"
                    ToolTip="Visit Soulitek website">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image Name="LogoImage"
                       Width="180" 
                       Height="40" 
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
            </Button>
            
            <!-- Menu Icon (Theme Toggle/Minimize/Close) -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Name="ThemeToggleButton"
                        Width="40" Height="40"
                        Background="Transparent"
                        Foreground="#8A8F98"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Toggle theme">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Name="ThemeIcon" Text=""/>
                </Button>
                <Button Name="MinimizeButton"
                        Width="40" Height="40"
                        Background="Transparent"
                        Foreground="#8A8F98"
                        BorderThickness="0"
                        Cursor="Hand">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE921;"/>
                </Button>
                <Button Name="CloseButton"
                        Width="40" Height="40"
                        Background="Transparent"
                        Foreground="#8A8F98"
                        BorderThickness="0"
                        Cursor="Hand">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE8BB;"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                     Name="MainScrollViewer"
                     VerticalScrollBarVisibility="Auto"
                     Background="#F8FAFC">
            <StackPanel Margin="16">
                <!-- Search Bar -->
                <Grid Margin="0,0,0,16">
                    <TextBox Name="SearchBox" 
                            Style="{StaticResource SearchBox}"
                            VerticalAlignment="Center"/>
                    <TextBlock Name="SearchPlaceholder"
                              Text="Search..."
                              FontSize="14"
                              FontFamily="Segoe UI"
                              Foreground="#A1A1AA"
                              VerticalAlignment="Center"
                              Margin="40,0,0,0"
                              IsHitTestVisible="False"/>
                </Grid>

                <!-- Categories -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Name="CategoriesLabel" Text="Categories" 
                              FontSize="14" 
                              FontWeight="Medium"
                              FontFamily="Segoe UI"
                              Foreground="#8A8F98" 
                              Margin="0,0,0,8"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                 VerticalScrollBarVisibility="Hidden">
                        <StackPanel Name="CategoriesPanel" 
                                  Orientation="Horizontal">
                            <Button Name="BtnCatAll" Content="All" Style="{StaticResource CategoryButtonActive}"/>
                            <Button Name="BtnCatSetup" Content="Setup" Style="{StaticResource CategoryButtonInactive}"/>
                            <Button Name="BtnCatNetwork" Content="Network" Style="{StaticResource CategoryButtonInactive}"/>
                            <Button Name="BtnCatInternet" Content="Internet" Style="{StaticResource CategoryButtonInactive}"/>
                            <Button Name="BtnCatSecurity" Content="Security" Style="{StaticResource CategoryButtonInactive}"/>
                            <Button Name="BtnCatSupport" Content="Support" Style="{StaticResource CategoryButtonInactive}"/>
                            <Button Name="BtnCatM365" Content="M365" Style="{StaticResource CategoryButtonInactive}"/>
                            <Button Name="BtnCatHardware" Content="Hardware" Style="{StaticResource CategoryButtonInactive}"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

                <!-- Tools List (Side by Side) -->
                <WrapPanel Name="ToolsPanel" Orientation="Horizontal"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="2" 
              Name="FooterGrid"
              Background="#8A8F98">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    Grid.RowSpan="2"
                    BorderBrush="#52525B" 
                    BorderThickness="0,1,0,0"/>
            
            <!-- Status Text -->
            <TextBlock Name="StatusLabel" 
                      Grid.Row="0"
                      Text="Showing 33 tool(s) in 'All' category" 
                      FontSize="11"
                      FontFamily="Segoe UI"
                      Foreground="White" 
                      HorizontalAlignment="Center"
                      Margin="0,6,0,4"/>
            
            <!-- Bottom Navigation -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Help -->
                <Button Grid.Column="0" 
                       Name="HelpButton"
                       Style="{StaticResource NavButton}">
                    <TextBlock Text="Help" 
                             FontSize="11"
                             FontFamily="Segoe UI"
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                </Button>
                
                <!-- About -->
                <Button Grid.Column="1" 
                       Name="AboutButton"
                       Style="{StaticResource NavButton}">
                    <TextBlock Text="About" 
                             FontSize="11"
                             FontFamily="Segoe UI"
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                </Button>
                
                <!-- GitHub -->
                <Button Grid.Column="2" 
                       Name="GitHubButton"
                       Style="{StaticResource NavButton}">
                    <TextBlock Text="GitHub" 
                             FontSize="11"
                             FontFamily="Segoe UI"
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Discord -->
                <Button Grid.Column="3" 
                       Name="DiscordButton"
                       Style="{StaticResource NavButton}">
                    <TextBlock Text="Discord" 
                             FontSize="11"
                             FontFamily="Segoe UI"
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Self-Destruct -->
                <Button Grid.Column="4" 
                       Name="SelfDestructButton"
                       Style="{StaticResource NavButton}">
                    <TextBlock Text="Uninstall" 
                             FontSize="11"
                             FontFamily="Segoe UI"
                             Foreground="#EF4444"
                             HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
