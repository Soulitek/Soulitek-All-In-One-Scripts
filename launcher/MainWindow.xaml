<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SouliTEK All-In-One Scripts" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="22" 
                                Padding="20,12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18" 
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tool Card Style -->
        <Style x:Key="ToolCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#667eea" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#667eea"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container with rounded corners and shadow -->
    <Border CornerRadius="15" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>      <!-- Title bar -->
                <RowDefinition Height="120"/>     <!-- Header -->
                <RowDefinition Height="100"/>     <!-- Search & Filter -->
                <RowDefinition Height="*"/>       <!-- Tools -->
                <RowDefinition Height="50"/>      <!-- Status bar -->
                <RowDefinition Height="70"/>      <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#667eea" Name="TitleBarGrid">
                <TextBlock Text="SouliTEK All-In-One Scripts" 
                          FontSize="12" 
                          FontWeight="SemiBold"
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="15,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="MinimizeButton" 
                            Content="─" 
                            Width="40" Height="40"
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Cursor="Hand"/>
                    <Button Name="CloseButton" 
                            Content="✕" 
                            Width="40" Height="40"
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- Header with Gradient -->
            <Grid Grid.Row="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="SouliTEK All-In-One Scripts" 
                              FontSize="32" 
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Professional PowerShell Tools for IT Professionals" 
                              FontSize="14" 
                              Foreground="#E0E7FF"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Search & Filter Panel -->
            <Grid Grid.Row="2" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search Box -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="30,10">
                    <TextBlock Text="Search:" 
                              FontSize="12" 
                              FontWeight="Bold"
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              Foreground="#64748B"/>
                    <TextBox Name="SearchBox" 
                            Style="{StaticResource SearchBox}"
                            Width="850"/>
                </StackPanel>
                
                <!-- Category Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="30,5" VerticalAlignment="Center">
                    <TextBlock Text="Categories:" 
                              FontSize="11" 
                              FontWeight="Bold"
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              Foreground="#64748B"/>
                    <Button Name="BtnCatAll" Content="All" Style="{StaticResource CategoryButton}" Width="100"/>
                    <Button Name="BtnCatNetwork" Content="Network" Style="{StaticResource CategoryButton}" Width="100"/>
                    <Button Name="BtnCatSecurity" Content="Security" Style="{StaticResource CategoryButton}" Width="100"/>
                    <Button Name="BtnCatSupport" Content="Support" Style="{StaticResource CategoryButton}" Width="100"/>
                    <Button Name="BtnCatSoftware" Content="Software" Style="{StaticResource CategoryButton}" Width="100"/>
                    <Button Name="BtnCatM365" Content="M365" Style="{StaticResource CategoryButton}" Width="100"/>
                    <Button Name="BtnCatHardware" Content="Hardware" Style="{StaticResource CategoryButton}" Width="100"/>
                </StackPanel>
            </Grid>

            <!-- Tools ScrollViewer -->
            <ScrollViewer Grid.Row="3" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="20,10"
                         Background="#F8FAFC">
                <StackPanel Name="ToolsPanel" Margin="10"/>
            </ScrollViewer>

            <!-- Status Bar -->
            <Grid Grid.Row="4" Background="#F8FAFC">
                <TextBlock Name="StatusLabel" 
                          Text="Ready - Select a tool to launch" 
                          FontSize="11"
                          Foreground="#64748B" 
                          VerticalAlignment="Center" 
                          Margin="30,0"/>
                <TextBlock Name="AdminLabel" 
                          Text="Administrator" 
                          FontSize="11"
                          FontWeight="Bold"
                          Foreground="#10B981" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Right"
                          Margin="0,0,30,0"/>
            </Grid>

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="5" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Button Name="HelpButton" Content="Help" Width="110" Height="40" Style="{StaticResource ModernButton}" Margin="5" Background="#6366f1"/>
                <Button Name="AboutButton" Content="About" Width="110" Height="40" Style="{StaticResource ModernButton}" Margin="5" Background="#8b5cf6"/>
                <Button Name="GitHubButton" Content="GitHub" Width="110" Height="40" Style="{StaticResource ModernButton}" Margin="5" Background="#1e293b"/>
                <Button Name="WebsiteButton" Content="Website" Width="110" Height="40" Style="{StaticResource ModernButton}" Margin="5" Background="#14b8a6"/>
                <Button Name="ExitButton" Content="Exit" Width="110" Height="40" Style="{StaticResource ModernButton}" Margin="5" Background="#ef4444"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

